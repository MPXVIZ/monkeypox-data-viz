{
	"name": "monkeypox-viz",
	"version": "0.1.0",
	"private": true,
	"devDependencies": {
		"@babel/core": "^7.14.6",
		"@babel/preset-react": "^7.14.5",
		"babel-loader": "^8.2.2",
		"dotenv-webpack": "^7.0.3",
		"mapbox-gl": "^2.3.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-redux": "^8.0.2",
		"react-router-dom": "^6.3.0",
		"react-scripts": "^4.0.3",
		"webpack": "^5.43.0",
		"webpack-cli": "^4.7.2"
	},
	"dependencies": {
		"autoprefixer": "^10.4.8",
		"axios": "^0.21.1",
		"dotenv": "^10.0.0",
		"node-fetch": "^2.6.7",
		"nodemon": "^2.0.9",
		"path": "^0.12.7",
		"postcss": "^8.4.14",
		"python-shell": "^3.0.1",
		"tailwindcss": "^3.1.7"
	},
	"scripts": {
		"build": "webpack -w",
		"build-tailwind": "npx tailwindcss -i ./src/client/input.css -o ./public/css/main.css --watch",
		"build:dev": "npm run build -- --watch --mode=development & npm run build-tailwind",
		"heroku-postbuild": "webpack --config webpack.prod.js",
		"seed": "node script/seed.js",
		"start": "node src/server",
		"start:dev": "npm run build:dev & npm run start-server",
		"start:dev:logger": "LOGGING=true npm run start:dev",
		"start:dev:seed": "SEED=true npm run start:dev",
		"start-server": "JWT=shh nodemon server -e html,js,scss --ignore public --ignore client"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
